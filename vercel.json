{
  "version": 2,
  "builds": [
    {
      "src": "vercel/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vercel/$1.js"
    },
    {
      "src": "/(.*).(png|gif|css)",
      "dest": "/public/$1.$2"
    },
    {
      "src": "/(.*).js",
      "dest": "/public/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    }
  ]
}
