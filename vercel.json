{
  "version": 2,
  "builds": [
    {
      "src": "vercel/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "/vercel/$1.js"
    },
    {
      "src": "/(.*).(png|gif|jpg|jpeg|css|svg|ttf|js|ico|woff2?)",
      "dest": "/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    },
    {
      "status": 404,
      "src": "/.*",
      "dest": "/public/404.html"
    }
  ]
}
